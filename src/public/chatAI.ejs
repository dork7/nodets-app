<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ChatAI Window</title>
    <style>
        /* ===== Color Palette ===== */
        :root {
            --bg-primary: #0a0a0a;
            --bg-secondary: #141414;
            --bg-tertiary: #1a1a1a;
            --bg-card: #1f1f1f;
            --bg-input: #2a2a2a;
            --bg-hover: #333333;
            --text-primary: #e5e5e5;
            --text-secondary: #a0a0a0;
            --text-accent: #d4d4d4;
            --accent-primary: #888888;
            --accent-secondary: #666666;
            --accent-tertiary: #999999;
            --user-msg: #2a2a2a;
            --ai-msg: #1f1f1f;
            --system-msg: #3a3a3a;
            --success: #22c55e;
            --error: #ef4444;
            --border: #333333;
            --shadow: rgba(0, 0, 0, 0.4);
        }

        /* ===== Base Styles ===== */
        body {
            background: var(--bg-primary);
            color: var(--text-primary);
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, Arial, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        a {
            color: var(--text-primary);
            text-decoration: underline;
            transition: opacity 0.2s;
        }

        a:hover {
            opacity: 0.7;
        }

        /* ===== Chat Container ===== */
        #chat-container {
            background: var(--bg-card);
            max-width: 70vw;
            margin: 40px auto;
            border-radius: 8px;
            border: 1px solid var(--border);
            padding: 24px 16px 16px 16px;
            display: flex;
            flex-direction: column;
            height: 70vh;
            backdrop-filter: blur(10px);
        }

        #messages {
            flex: 1;
            overflow-y: auto;
            margin-bottom: 18px;
            padding-right: 6px;
            display: flex;
            flex-direction: column;
        }

        /* Custom Scrollbar */
        #messages::-webkit-scrollbar {
            width: 6px;
        }

        #messages::-webkit-scrollbar-track {
            background: transparent;
        }

        #messages::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 3px;
        }

        #messages::-webkit-scrollbar-thumb:hover {
            background: var(--text-secondary);
        }

        /* ===== Message Styles ===== */
        .message {
            display: block;
            margin-bottom: 12px;
            padding: 10px 16px;
            border-radius: 4px;
            max-width: 80%;
            word-break: break-word;
            position: relative;
            font-size: 1rem;
            line-height: 1.6;
        }

        .message.user {
            background: var(--user-msg);
            color: var(--text-primary);
            align-self: flex-end;
            border-bottom-right-radius: 4px;
            text-align: right;
            border: 1px solid var(--border);
        }

        .message.ai {
            position: relative;
            background: var(--ai-msg);
            color: var(--text-primary);
            border: 1px solid var(--border);
            display: flex;
            flex-direction: column;
        }

        .message-content {
            flex: 1;
        }

        .message.system {
            background: var(--system-msg);
            color: var(--text-secondary);
            text-align: left;
            font-size: 0.95em;
            border-radius: 8px;
            margin: 8px 0;
            max-width: 60%;
            align-self: flex-start;
            border: 1px solid var(--border);
        }

        /* ===== AI Message Content Styles ===== */
        .message.ai pre,
        .message.ai pre code {
            background: rgba(0, 0, 0, 0.3);
            color: var(--text-primary);
            font-family: 'Fira Code', 'Fira Mono', 'Consolas', monospace;
            font-size: 0.98em;
            border-radius: 4px;
            padding: 12px 16px;
            overflow-x: auto;
            margin: 8px 0;
            display: block;
            border: 1px solid var(--border);
        }

        .message.ai code {
            background: rgba(0, 0, 0, 0.3);
            color: var(--text-primary);
            font-family: 'Fira Code', 'Fira Mono', 'Consolas', monospace;
            font-size: 0.98em;
            border-radius: 4px;
            padding: 4px 8px;
            overflow-x: auto;
            margin: 4px 0;
            border: 1px solid var(--border);
        }

        .message.ai strong {
            color: var(--text-primary);
            font-weight: 600;
        }

        .message.ai em {
            color: var(--text-secondary);
            font-style: italic;
        }

        .message.ai a {
            color: var(--text-primary);
            text-decoration: underline;
            transition: opacity 0.2s;
        }

        .message.ai a:hover {
            opacity: 0.7;
        }

        /* ===== Related Indicator Styles ===== */
        .related-indicator-section {
            margin-top: 8px;
            padding-top: 8px;
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: flex-end;
        }

        .related-indicator {
            font-size: 0.75em;
            font-weight: 500;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .related-indicator::after {
            content: '';
            width: 10px;
            height: 10px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .related-indicator.related {
            color: var(--success);
        }

        .related-indicator.related::after {
            background-color: var(--success);
        }

        .related-indicator.unrelated {
            color: var(--error);
        }

        .related-indicator.unrelated::after {
            background-color: var(--error);
        }

        /* ===== Input Form Styles ===== */
        #input-form {
            display: flex;
            gap: 8px;
            margin-top: 8px;
        }

        #input {
            flex: 1;
            padding: 10px 14px;
            border-radius: 4px;
            border: 1px solid var(--border);
            background: var(--bg-input);
            color: var(--text-primary);
            font-size: 1em;
            outline: none;
            transition: border-color 0.2s;
        }

        #input:focus {
            border-color: var(--text-secondary);
        }

        #input::placeholder {
            color: var(--text-secondary);
        }

        #send {
            background: var(--bg-input);
            color: var(--text-primary);
            border: 1px solid var(--border);
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 1em;
            font-weight: 400;
            cursor: pointer;
            transition: background 0.2s;
        }

        #send:hover {
            background: var(--bg-hover);
        }

        /* ===== Streaming Toggle Styles ===== */
        .streaming-toggle-container {
            display: flex;
            align-items: center;
        }

        .streaming-toggle-label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 1em;
            color: var(--text-secondary);
            cursor: pointer;
            font-weight: 400;
        }

        .streaming-toggle-wrapper {
            position: relative;
            display: inline-block;
            width: 44px;
            height: 24px;
        }

        .streaming-toggle-input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .streaming-toggle-track {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--bg-input);
            border-radius: 24px;
            transition: all 0.3s ease;
            border: 2px solid var(--border);
        }

        .streaming-toggle-thumb {
            position: absolute;
            left: 2px;
            top: 2px;
            width: 18px;
            height: 18px;
            background: var(--text-primary);
            border-radius: 50%;
            transition: transform 0.2s ease;
        }

        .streaming-toggle-input:checked + .streaming-toggle-track {
            background: var(--bg-hover);
            border-color: var(--text-secondary);
        }

        .streaming-toggle-input:checked + .streaming-toggle-track + .streaming-toggle-thumb {
            transform: translateX(20px);
        }

        /* ===== Model Selector Styles ===== */
        #model-selector-container {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-right: 12px;
        }

        .model-selector-label {
            color: var(--text-secondary);
            font-size: 1em;
            margin-right: 8px;
            font-weight: 400;
        }

        #model-selector {
            display: flex;
            gap: 4px;
        }

        .model-btn {
            background: var(--bg-input);
            color: var(--text-secondary);
            border: 1px solid var(--border);
            border-radius: 4px;
            padding: 6px 12px;
            font-size: 0.9em;
            cursor: pointer;
            transition: all 0.2s;
            outline: none;
            font-weight: 400;
        }

        .model-btn:hover {
            background: var(--bg-hover);
            color: var(--text-primary);
        }

        .model-btn[aria-pressed="true"] {
            background: var(--bg-hover);
            color: var(--text-primary);
            border-color: var(--text-secondary);
        }

        .model-btn:focus {
            outline: 1px solid var(--text-secondary);
            outline-offset: 2px;
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="messages"></div>
        <form id="input-form">
            <input id="input" autocomplete="off" placeholder="Type your message..." />
            
            <div class="streaming-toggle-container">
                <label class="streaming-toggle-label">
                    <span id="streaming-label">Streaming</span>
                    <span class="streaming-toggle-wrapper">
                        <input type="checkbox" id="stream-toggle" class="streaming-toggle-input" checked>
                        <span class="streaming-toggle-track"></span>
                        <span class="streaming-toggle-thumb"></span>
                    </span>
                </label>
            </div>
            
            <button id="send" type="submit">Send</button>
            
            <div id="model-selector-container">
                <label for="model-selector" class="model-selector-label">AI Model:</label>
                <div id="model-selector"></div>
            </div>
        </form>
    </div>

    <script nonce="abc123">
        // ===== Configuration =====
        const CONFIG = {
            WS_URL: 'ws://localhost:2020/ws/chatAI',
            MODELS_API_URL: 'http://localhost:2020/chatModels',
            RECONNECT_DELAY: 5000,
            DEFAULT_MODEL_INDEX: 1
        };

        // ===== State Management =====
        const state = {
            selectedModel: '',
            streamingEnabled: false,
            isStreaming: false,
            isConnected: false,
            currentIsRelated: false,
            combinedContent: '',
            socket: null,
            sessionId: `sess-${Math.random().toString(36).substr(2, 9)}`
        };

        // ===== DOM Elements =====
        const elements = {
            messages: document.getElementById('messages'),
            form: document.getElementById('input-form'),
            input: document.getElementById('input'),
            streamToggle: document.getElementById('stream-toggle'),
            streamingLabel: document.getElementById('streaming-label'),
            modelSelector: document.getElementById('model-selector')
        };

        // ===== Utility Functions =====
        const utils = {
            parseMarkdown(text) {
                return text
                    .replace(/(?:__|\*\*)(.*?)\1/g, '<strong>$1</strong>')
                    .replace(/(?:_|\*)(.*?)\1/g, '<em>$1</em>')
                    .replace(/```([\s\S]*?)```/g, '<pre><code>$1</code></pre>')
                    .replace(/`([^`]+)`/g, '<code>$1</code>')
                    .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank">$1</a>')
                    .replace(/\n/g, '<br>');
            },

            scrollToBottom() {
                elements.messages.scrollTop = elements.messages.scrollHeight;
            }
        };

        // ===== Message Management =====
        const messageManager = {
            append(sender, message, type) {
                const div = document.createElement('div');
                div.className = `message ${type}`;
                
                if (type === 'ai') {
                    const contentDiv = document.createElement('div');
                    contentDiv.className = 'message-content';
                    contentDiv.innerHTML = `<strong>${sender}:</strong> ${utils.parseMarkdown(message)}`;
                    div.appendChild(contentDiv);
                } else {
                    div.innerHTML = `<strong>${sender}:</strong> ${utils.parseMarkdown(message)}`;
                }
                
                elements.messages.appendChild(div);
                utils.scrollToBottom();
                return div;
            },

            updateLast(sender, message, type) {
                const lastMsg = elements.messages.lastElementChild;
                if (lastMsg && lastMsg.classList.contains(type)) {
                    if (type === 'ai') {
                        const contentDiv = lastMsg.querySelector('.message-content');
                        if (contentDiv) {
                            contentDiv.innerHTML = `<strong>${sender}:</strong> ${utils.parseMarkdown(message)}`;
                        } else {
                            const newContentDiv = document.createElement('div');
                            newContentDiv.className = 'message-content';
                            newContentDiv.innerHTML = `<strong>${sender}:</strong> ${utils.parseMarkdown(message)}`;
                            // Remove old content and add new structure
                            const oldContent = lastMsg.childNodes;
                            Array.from(oldContent).forEach(node => {
                                if (!node.classList || !node.classList.contains('related-indicator-section')) {
                                    node.remove();
                                }
                            });
                            lastMsg.insertBefore(newContentDiv, lastMsg.querySelector('.related-indicator-section'));
                        }
                    } else {
                        lastMsg.innerHTML = `<strong>${sender}:</strong> ${utils.parseMarkdown(message)}`;
                    }
                    utils.scrollToBottom();
                    return lastMsg;
                }
                return null;
            }
        };

        // ===== Related Indicator Management =====
        const indicatorManager = {
            add(messageElement, isRelated) {
                if (!messageElement) return;
                
                let indicatorSection = messageElement.querySelector('.related-indicator-section');
                if (!indicatorSection) {
                    indicatorSection = document.createElement('div');
                    indicatorSection.className = 'related-indicator-section';
                    
                    const indicator = document.createElement('span');
                    indicator.className = 'related-indicator';
                    indicatorSection.appendChild(indicator);
                    
                    messageElement.appendChild(indicatorSection);
                }
                this.update(messageElement, isRelated);
            },

            update(messageElement, isRelated) {
                const indicator = messageElement?.querySelector('.related-indicator');
                if (!indicator) return;

                indicator.classList.remove('related', 'unrelated');
                
                if (isRelated === true) {
                    indicator.classList.add('related');
                    indicator.textContent = 'Related';
                } else {
                    indicator.classList.add('unrelated');
                    indicator.textContent = 'Unrelated';
                }
            }
        };

        // ===== Stream Processing =====
        const streamProcessor = {
            process(data) {
                if (data.type === 'stream_start') {
                    state.isStreaming = true;
                    state.combinedContent = '';
                    return 'Thinking...';
                }
                
                if (data.type === 'stream_continue' && state.isStreaming) {
                    if (data.aiResponse?.content) {
                        state.combinedContent += data.aiResponse.content;
                    }
                    return state.combinedContent;
                }
                
                if (data.type === 'stream_end' && state.isStreaming) {
                    state.isStreaming = false;
                    return state.combinedContent;
                }
                
                return '';
            }
        };

        // ===== WebSocket Management =====
        const websocketManager = {
            connect() {
                state.socket = new WebSocket(CONFIG.WS_URL);
                
                state.socket.addEventListener('open', () => {
                    messageManager.append('System', 'Connected to chat server.', 'system');
                    state.isConnected = true;
                });

                state.socket.addEventListener('message', (event) => {
                    this.handleMessage(event);
                });

                state.socket.addEventListener('close', () => {
                    messageManager.append('System', 'Disconnected from chat server.', 'system');
                    state.isConnected = false;
                    this.scheduleReconnect();
                });
            },

            handleMessage(event) {
                const data = JSON.parse(event.data);
                console.log('Message from server:', event.data);

                if (data.isRelated !== undefined) {
                    state.currentIsRelated = data.isRelated;
                }

                const displayValue = streamProcessor.process(data);
                const messageType = data.sender === 'AI' ? 'ai' : 'user';
                const lastMsg = messageManager.updateLast(data.sender, displayValue, messageType);

                if (lastMsg) {
                    if (data.sender === 'AI') {
                        const indicator = lastMsg.querySelector('.related-indicator');
                        if (indicator) {
                            indicatorManager.update(lastMsg, state.currentIsRelated);
                        } else {
                            indicatorManager.add(lastMsg, state.currentIsRelated);
                        }
                    }
                } else {
                    const msgElement = messageManager.append(data.sender, displayValue, messageType);
                    if (data.sender === 'AI') {
                        indicatorManager.add(msgElement, state.currentIsRelated);
                    }
                }
            },

            scheduleReconnect() {
                setTimeout(() => {
                    messageManager.append('System', 'Reconnecting...', 'system');
                    if (!state.isConnected) {
                        this.connect();
                    }
                }, CONFIG.RECONNECT_DELAY);
            },

            send(message) {
                if (state.socket && state.socket.readyState === WebSocket.OPEN) {
                    state.socket.send(JSON.stringify(message));
                }
            }
        };

        // ===== Model Management =====
        const modelManager = {
            async loadModels() {
                try {
                    const res = await fetch(CONFIG.MODELS_API_URL);
                    const { models } = await res.json();
                    
                    if (Array.isArray(models) && models.length > 0) {
                        console.log('Fetched models:', models);
                        this.renderModels(models);
                        state.selectedModel = models[CONFIG.DEFAULT_MODEL_INDEX]?.value || models[0].value;
                    }
                } catch (error) {
                    console.error('Error fetching models:', error);
                }
            },

            renderModels(models) {
                elements.modelSelector.innerHTML = models
                    .map((model, index) => `
                        <button 
                            type="button" 
                            class="model-btn" 
                            data-model="${model.value}" 
                            aria-pressed="${index === CONFIG.DEFAULT_MODEL_INDEX ? 'true' : 'false'}"
                        >
                            ${model.label}
                        </button>
                    `)
                    .join('');

                const modelBtns = elements.modelSelector.querySelectorAll('.model-btn');
                modelBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        modelBtns.forEach(b => b.setAttribute('aria-pressed', 'false'));
                        btn.setAttribute('aria-pressed', 'true');
                        state.selectedModel = btn.getAttribute('data-model');
                    });
                });
            }
        };

        // ===== Streaming Toggle Management =====
        const streamingToggle = {
            init() {
                elements.streamToggle.addEventListener('change', () => {
                    state.streamingEnabled = elements.streamToggle.checked;
                    this.updateLabel();
                });
                this.updateLabel();
            },

            updateLabel() {
                elements.streamingLabel.textContent = 
                    elements.streamToggle.checked ? 'Streaming' : 'No Streaming';
            }
        };

        // ===== Form Handling =====
        const formHandler = {
            init() {
                elements.form.addEventListener('submit', (e) => {
                    e.preventDefault();
                    const message = elements.input.value.trim();
                    
                    if (message && state.socket) {
                        websocketManager.send({
                            sender: 'User',
                            type: 'request',
                            id: state.sessionId,
                            method: 'chatAI',
                            stream: state.streamingEnabled,
                            model: state.selectedModel,
                            params: { prompt: message }
                        });
                        
                        messageManager.append('You', message, 'user');
                        elements.input.value = '';
                    }
                });
            }
        };

        // ===== Initialization =====
        document.addEventListener('DOMContentLoaded', () => {
            document.title = `ChatAI Session | ${state.sessionId}`;
            
            streamingToggle.init();
            formHandler.init();
            modelManager.loadModels();
            websocketManager.connect();
        });
    </script>
</body>
</html>
